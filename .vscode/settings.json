{
    // --------------- Explorer Settings ---------------
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,

    // --------------- File Nesting ---------------
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "package.json": "package-lock.json, yarn.lock, pnpm-*.yaml, bun.lockb, *config.ts, *config.js, *config.json, *config.yaml",
        "*.html": "$(capture).*",
        ".gitignore": "*-env.d.ts, .env, .env.example",
        "README.md": "*.md"
    },

    // --------------- Editor Display ---------------
    "editor.renderLineHighlight": "gutter",
    "editor.rulers": [80, 120],
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.semanticHighlighting.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14,

    // --------------- Terminal ---------------
    "terminal.integrated.env.windows": {},
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontSize": 14,

    // --------------- Formatting ---------------
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "prettier.vueIndentScriptAndStyle": true,
    "prettier.singleAttributePerLine": true,
    "prettier.semi": false,
    "[json5]": {
        "editor.defaultFormatter": "BlueGlassBlock.better-json5"
    },

    // --------------- Diff & Compare ---------------
    "diffEditor.ignoreTrimWhitespace": false,

    // --------------- Workbench Appearance ---------------
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Dracula Theme Soft",
    "workbench.editor.labelFormat": "short",
    "workbench.tree.indent": 16,
    "workbench.activityBar.location": "hidden",
    "workbench.statusBar.visible": false,
    "workbench.startupEditor": "terminal",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "material-icon-theme.folders.associations": {
        "composables": "nuxt"
    },

    // --------------- Spelling ---------------
    "cSpell.language": "en, pt, ptBR"
}
